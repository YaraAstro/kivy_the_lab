#:kivy 2.3.0

WidgetExample:

<WidgetExample>:
    cols: 3
    ToggleButton:
        text: "OFF"
        on_press: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text: "Count"
        on_press: root.on_button_click()
        disabled: not root.count_enabled
    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "75dp"
        color: 1, .5, 0, 1
    Switch:
        on_active: root.on_switch_active(self)
        size_hint: None, 1
        width: "100dp"
    Slider:
        id: my_slider
        min: 0
        max: 100
        value: 50
        # on_value: root.on_slider_value(self)
    Label:
        text: str(int(my_slider.value))

<PageLayoutExample@PageLayout>:
    MainWidget:
    BoxLayoutExample:
    AchorLayoutExample:
    GridLayoutExample:

<ScrollViewExample@ScrollView>:
    StackLayoutExample:
        size_hint: 1, None
        height: self.minimum_height

<StackLayoutExample>:
    # left-right & top-bottom -> lr-tb | right-left & top-bottom -> rl-tb
    # orientation: "lr-bt"
    # padding: ("20dp", "10dp", "30dp", "50dp")
    # spacing: "20dp", "10dp"

<GridLayoutExample@GridLayout>:
    # cols: 3
    rows: 2
    Button:
        text: "A"
        size_hint: None, 1
        width: "50dp"
    BoxLayoutExample:
    Button:
        text: "C"
    Button:
        text: "D"
        size_hint: None, 1
        width: "50dp"
    Button:
        text: "E"
    Button:
        text: "F"
    # Button:
    #    text: "C"

<AchorLayoutExample>:
    # right, left, center
    anchor_x: "center"
    # bottom, top, center
    anchor_y: "top"
    BoxLayout:
        size_hint: .2, .2
        Button:
            text: "A"
        Button:
            text: "B"

<BoxLayoutExample>:
    orientation: 'horizontal'
    Button:
        text: "A"
        size_hint: 1, .5 
        pos_hint: {'center_y': .5}
    BoxLayout:
        size_hint: 2, 1 
        orientation: 'vertical'
        spacing: "10dp"
        Button:
            text: "B1" 
        Button:
            text: "B2" 
        Button:
            text: "B3" 
        Button:
            text: "B4"
    Label:
        text: "C"

<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp", "80dp"
        pos: "100dp", "200dp"
        color: 0, 0, 1, 1
    Label:
        text: "Yara"
        size: "100dp", "80dp"
        pos: "200dp", "300dp"
        color: 1, 0, 0, 1