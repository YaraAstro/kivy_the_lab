#:kivy 2.3.0

AchorLayoutExample:

<AchorLayoutExample>:
    # right, left, center
    anchor_x: "center"
    # bottom, top, center
    anchor_y: "top"
    BoxLayout:
        size_hint: .2, .2
        Button:
            text: "A"
        Button:
            text: "B"

<BoxLayoutExample>:
    orientation: 'horizontal'
    Button:
        text: "A"
        size_hint: 1, .5 
        pos_hint: {'center_y': .5}
    BoxLayout:
        size_hint: 2, 1 
        orientation: 'vertical'
        spacing: "10dp"
        Button:
            text: "B1" 
        Button:
            text: "B2" 
        Button:
            text: "B3" 
        Button:
            text: "B4"
    Label:
        text: "C"

<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp", "80dp"
        pos: "100dp", "200dp"
        color: 0, 0, 1, 1
    Label:
        text: "Yara"
        size: "100dp", "80dp"
        pos: "200dp", "300dp"
        color: 1, 0, 0, 1