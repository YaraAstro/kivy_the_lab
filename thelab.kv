#:kivy 2.3.0

BoxLayoutExample:

<BoxLayoutExample>:
    orientation: 'vertical'
    Button:
        text: "A"
        # size: "100dp", "50dp"
        size_hint: .5, None 
        height: "60dp"
        pos_hint: {'center_x': .5}
    Button:
        text: "B"
        size_hint: 1, 2 
    Label:
        text: "C"

<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp", "80dp"
        pos: "100dp", "200dp"
        color: 0, 0, 1, 1
    Label:
        text: "Yara"
        size: "100dp", "80dp"
        pos: "200dp", "300dp"
        color: 1, 0, 0, 1